# Landing page stage
FROM pandoc/core AS docs
WORKDIR /docs
COPY README.md .
RUN wget -O styling.css https://b.enjam.info/panam/styling.css && \
    pandoc --standalone --self-contained \
      --metadata title="Umami MCP Server" \
      --css=styling.css --to=html5 \
      README.md -o index.html

# Build stage
FROM golang:1.22-alpine AS builder

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o umami-mcp .

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /build/umami-mcp /app/umami-mcp
COPY --from=docs /docs/index.html /app/index.html

ENV TRANSPORT=http

ENTRYPOINT ["/app/umami-mcp"]
